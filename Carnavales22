.flip-card { /* carta invertida*/

  margin: auto;

  background-color: transparent;

  width: 300px;

  height: 300px;

  border: 0px solid #f1f1f1;

  perspective: 1000px; /* Elimina esto si no quieres el efecto 3D*/

}



/* Este contenedor es necesario para colocar el anverso y el reverso*/

.flip-card-inner {  /* carta invertida interior*/

  position: relative;

  width: 100%;

  height: 100%;

  text-align: center;

  transition: transform 0.8s;

  transform-style: preserve-3d;
  

}



/* Haga un giro horizontal cuando mueva el mouse sobre el contenedor de la caja de volteo*/

.flip-card:hover .flip-card-inner {

  transform: rotateY(180deg);

}



/* Posición del el anverso y el reverso*/

.flip-card-front, .flip-card-back { /* carta invertida frontal,   carta invertida posterior*/

  position: absolute;

  width: 100%;

  height: 100%;

  -webkit-backface-visibility: hidden; /* Safari */

  backface-visibility: hidden;
   

}



/* Color de fondo y de texto del anverso y el reverso */

.flip-card-front {

  background-color: #bbb;

  color: black;

}



/* Dale estilo a la parte de atrás*/

.flip-card-back {
    
   background-color: #E16387;
